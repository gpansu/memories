{# app/Resources/views/registration/register.html.twig #}
{% extends "base.html.twig" %}
{% block stylesheets %}
    <link href="{{ asset('css/register.css') }}" rel="stylesheet"/>
{% endblock %}

{% block scripts %}
    <script src='https://www.google.com/recaptcha/api.js?hl=en'></script>
{% endblock %}
{% block body %}
    <div class="registration card card-info">
        <div class="card-heading">
            <h3 class="card-title">Registration</h3>
        </div>
        <div class="card-body">
            {% if app.request.hasPreviousSession %}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="w-100 p-2">
                            <div class="alert text-center alert-{{ label == 'error' ? 'danger':label }} flash-{{ label }}">
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
            {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            <div class="g-recaptcha" data-sitekey="6Lc7NIkUAAAAAHVR7g_zjKSIjvFcsdv3wRALCMqU" lang="en"></div>
            <div class="d-flex justify-content-between mt-3">
                <button class="btn btn-outline-warning" type="button" onclick="location.href='/login'">Back to login</button>
                <button class="btn btn-outline-info" type="submit">Register</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}