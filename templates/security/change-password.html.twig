{# app/Resources/views/registration/register.html.twig #}
{% extends "base.html.twig" %}
{% block stylesheets %}
    <link href="{{ asset('css/register.css') }}" rel="stylesheet"/>
{% endblock %}

{% block scripts %}
{% endblock %}
{% block body %}
    <div class="registration card card-info">
        <div class="card-heading">
            <h3 class="card-title">{{ 'Change your password' | trans }}</h3>
        </div>
        <div class="card-body">
            <div class="mb-3">{{ 'Your current password is temporary. Please select a new one' | trans }}</div>
            {% if app.request.hasPreviousSession %}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="w-100 p-2">
                            <div class="alert text-center alert-{{ label == 'error' ? 'danger':label }} flash-{{ label }}">
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
            {{ form_start(form) }}
            {{ form_row(form.newPassword.first) }}
            {{ form_row(form.newPassword.second) }}
            <div class="d-flex justify-content-between mt-3">
                <button class="btn btn-outline-warning" type="button" onclick="location.href='./login'">{{ 'Back to login' | trans }}</button>
                <button class="btn btn-outline-info" type="submit">{{ 'Change my password' | trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}