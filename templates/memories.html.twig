{% extends 'home.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/home.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/testimonies.css') }}" rel="stylesheet"/>
{% endblock %}
{% block content %}
    <div class="description">{{ 'Please share your fondest memories of Pierre with us!' | trans }}</div>
    <div class="form-container">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.address) }}
        {{ form_row(form.testimony,{ 'attr': {'rows': '5'} }) }}
        <div class="text-center mt-3">
            <button class="btn btn-outline-info" type="submit">{{ 'Save' | trans }}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

